# This file is for unifying the coding style for different editors and IDEs
# editorconfig.org

root = true

[*]
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true

[**.{js,json}]
indent_style = space
indent_size = 2
insert_final_newline = true

[**.{md}]
indent_style = tab
indent_size = 4
insert_final_newline = true

[**.{css,htm,html}]
indent_style = tab
indent_size = 4
insert_final_newline = false
